{
  "compilerOptions": {
    "target": "es5",
    "types": [
      "node"
    ],
    "lib": [
      "dom",
      "esnext"
    ],
    "outDir": "./public",
    "noImplicitAny": false,
    "noImplicitThis": true,
    "strictNullChecks": true,
    "allowJs": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    "jsx": "react"
  },
  "include": [
    "src"
  ],
  "exclude": [
    "test",
    "release",
    "src/electron.js",
    "src/electron.ts",
    "**/*.js"
  ]
}
